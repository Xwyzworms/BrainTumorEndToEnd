<form action="/api/users" class="add_user" id="sampis" method="POST">
  <div class="new_user">
    <div class="form-group">
      <label for="nama" class="text-ligth">Name</label>
      <input type="hidden" name="id" value="" />
      <input type="text" name="nama" value="" placeholder="Enter Name" />
    </div>
    <div class="form-group">
      <label for="email" class="text-ligth">Email</label>
      <input type="text" name="email" value="" placeholder="Email@gmail.com" />
    </div>
    <div class="form-group">
      <label for="password" class="text-ligth">Password</label>
      <input type="password" name="password" value="" />
    </div>
    <div class="form-group">
      <label for="nomor_hp" class="text-ligth">No Hp</label>
      <input
        type="number"
        name="nomor_hp"
        value=""
        placeholder="+62 xxx-xxxx-xxx"
      />
    </div>
    <div class="form-group">
      <label for="confidence" class="text-ligth">Hasil Screening</label>
      <input type="number" name="confidence" value="" />
    </div>
    <div class="form-group">
      <button type="submit" class="btn text-dark update">Save</button>
    </div>
  </div>
</form>
